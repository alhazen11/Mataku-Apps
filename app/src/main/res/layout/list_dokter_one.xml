<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_10dp"
        android:paddingLeft="@dimen/size_10dp"
        android:gravity="center"
        android:paddingRight="@dimen/size_10dp"
        tools:context=".ui.dokter.DokterActivity">

    <ImageView
            android:layout_width="@dimen/size_75dp"
            android:layout_height="@dimen/size_75dp" app:srcCompat="@drawable/block_corner"
            android:id="@+id/ui_foto"
            android:scaleType="centerCrop"
    />
    <TextView
            android:text="TextView "
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_height="wrap_content" android:id="@+id/ui_nama"/>
</LinearLayout>